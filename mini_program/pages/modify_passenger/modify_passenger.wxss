/* pages/modify/modify.wxss */
/* 在按钮所在的父容器上应用 flex 布局 */
.content {
  display: flex;
  justify-content: space-between;
}

/* 设置图片样式 */
.image {
  width: 60px; /* 设置图片宽度 */
  height: 60px; /* 设置图片高度 */
}



.H-Line {
  background: #e0e3da;
  width: 100%;
  height: 2px;
}

.V-line {
  width: 4px;
  height: 44px;
  background-color: rgb(163, 168, 168);
}


.zw {
  font-size: 20px;
}

.container {
  flex-direction: row;
  display: flex;
}

.left-ct {
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 5px;
}

.sr {
  font-size: 20px;
  margin-top: 10px;
  margin-left: 8px;
}



.qd {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 100rpx;
  border-radius: 40rpx;
}
/* 在对应的 wxss 文件中添加样式规则 */
.del {
  background-color: #ff0000; /* 设置背景色为红色 */
  color: #ffffff; /* 设置文字颜色为白色 */
  border: 1px solid #ff0000; /* 设置边框为红色 */
  border-radius: 5px; /* 设置圆角 */
  padding: 1px 30px; /* 设置内边距 */
  margin-top: 5px;
  margin-left: 10px;
  margin-right: 10px;
  height: 50px;
}

/* 按钮按下时的样式 */
.del:active {
  background-color: #cc0000; /* 设置按下时的背景色为深红色 */
  border: 1px solid #cc0000; /* 设置按下时的边框为深红色 */
}

.typeText{
  color: #808080;
}

